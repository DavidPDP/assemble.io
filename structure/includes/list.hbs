{{#each navigation}}
  <ul class="{{modifier}}">
  {{#each items}}
    {{#if enabled}}
      <li {{isActive url}}>
        <a href="{{!rel (isPermalink url url)}}">{{text}}</a>
      </li>
    {{/if}}
    {{#if external}}
      <li> <a href="{{url}}">{{text}}</a> </li>
    {{/if}}
    {{#if dropdown}}
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"> {{text}} <b class="caret"></b></a>
        <ul class="{{modifier}}">
        {{#each items}}
          {{#if enabled}}
            <li> <a href="{{url}}">{{text}}</a> </li>
          {{/if}}
          {{#if divider}}
            <li class="divider"></li>
          {{/if}}
        {{/each}}
        </ul>
      </li>
    {{/if}}
    {{#if divider}}
      <li class="divider"></li>
    {{/if}}
  {{/each}}
  </ul>
{{/each}}
