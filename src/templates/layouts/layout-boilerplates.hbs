<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>{{#if title}} {{title}} {{else}} {{titleize page.basename}} {{/if}} | Assemble</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{assets}}/css/assemble.css">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="{{assets}}/js/html5shiv.js"></script>
    <script src="{{assets}}/js/respond/respond.min.js"></script>
    <![endif]-->

    <!-- Favicons -->
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="{{assets}}/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="{{assets}}/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="{{assets}}/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="{{assets}}/ico/apple-touch-icon-57-precomposed.png">
    <link rel="shortcut icon" href="{{assets}}/ico/favicon.png">
    {{> analytics }}
    {{> metadata }}
    <style>
      /* Temporarily override subhead styling for development */
      .subhead {
        background-color: #960f0f;
      }
      body .panel-docs blockquote {
        border-left-color: #cc2727;
      }
      body a {
        color: #cc2727;
      }
      .subhead .text-muted {
        font-weight: thinner;
        color: #be6969;
      }
    </style>
  </head>
  <body style="background: white">

    {{! NAVIGATION
    =================================== }}
    {{> navbar }}


    {{! MASTHEAD
    =================================== }}
    <header class="masthead subhead">
      <div class="container">
        <div class="row">
          <div class="col col-lg-12">
            <h1>{{#if title}}<span class="text-muted">BOILERPLATES&nbsp;/</span>&nbsp;{{ title }}{{else}}BOILERPLATES{{/if}}</h1>
          </div>
        </div>
      </div>
    </header>
    <div class="container">
      <div class="row">

        {{! VERTICAL NAV
        =================================== }}
        <div class="col col-lg-3">
          <div class="sidebar">

            <span class="nav-section-title">
              Boilerplates
            </span>
            <ul class="nav nav-pills nav-stacked">
              <li> <a href="boilerplate-site.html">Site</a> </li>
              <li> <a href="boilerplate-blog.html">Blog</a> </li>
              <li> <a href="boilerplate-bootstrap.html">Bootstrap</a> </li>
            </ul>
          </div>
        </div>

        {{! MAIN CONTENT
        =================================== }}
        <div class="col col-lg-9">
          <div class="panel panel-docs">
            <h1>{{page.title}}</h1>
            {{#markdown}}
              {{> body }}
              {{!-- This partial uses a helper that automatically gererates links from pages the given path(s). --}}
              {{> generated-links.md }}
              {{> manually-defined-links.md }}
            {{/markdown}}
            <hr>
            <div class="alert">

              {{!-- Special styles for GitHub Buttons
              =========================================== --}}
              <style type="text/css" media="screen">
                .alert iframe {
                  float: right;
                  margin: 7px -30px 0 0;
                  vertical-align: text-top;
                }
              </style>

              {{!-- GITHUB BUTTONS (right aligned)
              =========================================== --}}
              {{> github-star-button }}
              {{> github-fork-button }}

              <p>Find an error? <a class="alert-link" href="https://github.com/assemble/assemble-docs/issues?state=open">Let us know â†’</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>


    {{! SCRIPTS
    =================================== }}
    <script src="{{assets}}/js/jquery.js"></script>
    <script src="{{assets}}/js/bootstrap.js"></script>
    <script src="{{assets}}/js/highlight.js"></script>
    <script src="{{assets}}/js/holder/holder.js"></script>
    <script src="{{assets}}/js/showup.js"></script>
    <script>
      $().showUp('.navbar');
    </script>
  </body>
</html>
