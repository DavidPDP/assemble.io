---
layout: default.hbs
area: boilerplates
---
<style>
  /* Temporarily override subhead styling for development */
  .subhead {
    background-color: #edf1f1;
  }
  .subhead h1 {
    color: #3c6868;
  }
  .subhead .text-muted {
    font-weight: thinner;
    color: #d0dcdd;
  }
  body .panel-docs blockquote {
    border-left-color: #3c6868;
  }
  body a,
  .alert .alert-link {
    color: #3c6868;
  }
  body a:hover,
  .alert .alert-link:hover {
    color: #35a7a7
  }
</style>

{{!-- vertical navigation
=================================== --}}
<div class="col col-lg-3">
  <div class="sidebar">
    {{> sidenav-boilerplates }}
  </div>
</div>

{{!-- page content
=================================== --}}
<div class="col col-lg-9">
  <div class="panel panel-docs">
    <h1>{{page.title}}</h1>
    {{#markdown}}
      {{> body }}
      {{> links-generated.md }} {{!-- helper for generating links --}}
    {{/markdown}}
    <hr>

    {{> footer }}
  </div>
</div>
